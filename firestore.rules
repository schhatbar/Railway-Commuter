rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      // Users can read their own data
      allow read: if isOwner(userId);

      // Users can create their own profile
      allow create: if isOwner(userId) &&
                      request.resource.data.userId == userId;

      // Users can update their own profile
      allow update: if isOwner(userId);

      // Users cannot delete their profile (optional - can be changed)
      allow delete: if false;
    }

    // Trains collection
    match /trains/{trainId} {
      // Anyone authenticated can read train data
      allow read: if isAuthenticated();

      // Only allow writes through admin SDK (not from client)
      allow write: if false;
    }

    // Groups collection
    match /groups/{groupId} {
      // Group members can read group data
      allow read: if isAuthenticated() &&
                    request.auth.uid in resource.data.members.map(m => m.userId);

      // Authenticated users can create groups
      allow create: if isAuthenticated() &&
                      request.resource.data.createdBy == request.auth.uid &&
                      request.auth.uid in request.resource.data.members.map(m => m.userId);

      // Group members can update group (for joining, leaving, updating seats)
      allow update: if isAuthenticated() &&
                      request.auth.uid in resource.data.members.map(m => m.userId);

      // Only group creator can delete
      allow delete: if isAuthenticated() &&
                      request.auth.uid == resource.data.createdBy;
    }

    // Messages collection
    match /messages/{messageId} {
      // Users can read messages from groups they belong to
      allow read: if isAuthenticated() &&
                    exists(/databases/$(database)/documents/groups/$(resource.data.groupId)) &&
                    request.auth.uid in get(/databases/$(database)/documents/groups/$(resource.data.groupId)).data.members.map(m => m.userId);

      // Users can create messages in groups they belong to
      allow create: if isAuthenticated() &&
                      request.resource.data.userId == request.auth.uid &&
                      exists(/databases/$(database)/documents/groups/$(request.resource.data.groupId)) &&
                      request.auth.uid in get(/databases/$(database)/documents/groups/$(request.resource.data.groupId)).data.members.map(m => m.userId);

      // Messages cannot be updated or deleted (optional - can be changed)
      allow update, delete: if false;
    }
  }
}
